{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./build/js/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
        "src/configs/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "rootDir": "./src",
    "copy": {
        "patterns": [
            {
                "from": "src/configs/*",
                "to": "./build/js/configs"
            }
        ]
    }
}